
<%= render 'shared/errors', obj: @contact  %>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@contact, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :firstname %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :firstname, class: "form-control", placeholder: "First Name", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :middlename %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :middlename, class: "form-control", placeholder: "Middle Name", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :lastname %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :lastname, class: "form-control", placeholder: "Last Name", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :streetnumber %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :streetnumber, class: "form-control", placeholder: "Street Number", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :streetname %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :streetname, class: "form-control", placeholder: "Street Name", autofocus: true %>
        </div>
      </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :city %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :city, class: "form-control", placeholder: "City", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :state %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :state, class: "form-control", placeholder: "State", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :zipcode %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :zipcode, class: "form-control", placeholder: "zipcode" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
  <% end %>
    <div class="col-xs-4 col-xs-offset-4">
        [ <%= link_to "Cancel request and return to Contact listing", contacts_path %> ]
    </div>
  </div>
</div>
